<?xml version="1.0" ?>
<massive-search-mapping xmlns="http://massiveart.io/schema/dic/massive-search-mapping">
  <mapping class="App\Entity\PublicationTranslation">
    <id property="id" />
    <index value="publication" />

    <title property="title" />
    <locale property="locale" />
    <url expr="object.getRoute()?.getPath()" />

    <fields>
      <field name="title" type="string" />
      <field name="subtitle" type="string" />
      <!-- TODO: content search -->
    </fields>
  </mapping>
</massive-search-mapping>
