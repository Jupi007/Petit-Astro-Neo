<?xml version="1.0" ?>
<list xmlns="http://schemas.sulu.io/list-builder/list">
    <key>publication_typos</key>

    <joins name="publication">
        <join>
            <entity-name>App\Domain\Entity\Publication</entity-name>
            <field-name>App\Domain\Entity\PublicationTypo.publication</field-name>
        </join>
    </joins>

    <joins name="publicationDimensionContent">
        <join>
            <entity-name>App\Domain\Entity\Publication</entity-name>
            <field-name>App\Domain\Entity\PublicationTypo.publication</field-name>
        </join>

        <join>
            <entity-name>publicationDimensionContent</entity-name>
            <field-name>App\Domain\Entity\Publication.dimensionContents</field-name>
            <method>LEFT</method>
            <condition>publicationDimensionContent.locale = :locale AND publicationDimensionContent.stage = 'draft'</condition>
        </join>
    </joins>

    <properties>
        <property name="id" translation="sulu_admin.id">
            <field-name>id</field-name>
            <entity-name>App\Domain\Entity\PublicationTypo</entity-name>
        </property>

        <property name="description" visibility="always" searchability="yes" translation="sulu_admin.description">
            <field-name>description</field-name>
            <entity-name>App\Domain\Entity\PublicationTypo</entity-name>
        </property>

        <property name="publicationId" visibility="never" searchability="no">
            <field-name>id</field-name>
            <entity-name>App\Domain\Entity\Publication</entity-name>

            <joins ref="publication"/>
        </property>

        <property name="publicationTitle" visibility="yes" searchability="yes" translation="app.admin.publication">
            <field-name>title</field-name>
            <entity-name>publicationDimensionContent</entity-name>

            <joins ref="publicationDimensionContent"/>
        </property>
    </properties>
</list>
