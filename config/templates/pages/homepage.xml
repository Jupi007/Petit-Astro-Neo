<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\HeadlessBundle\Controller\HeadlessWebsiteController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="fr">Accueil</title>
    </meta>

    <properties>

        <xi:include href="../includes/title.xml"/>
        <xi:include href="../includes/subtitle.xml"/>
        <xi:include href="../includes/page-url.xml"/>

        <section name="cover">
            <meta>
                <title lang="en">Cover</title>
                <title lang="fr">Couverture</title>
            </meta>

            <properties>
                <property name="coverTeaser" type="teaser_selection">
                    <meta>
                        <title lang="en">Teaser</title>
                        <title lang="fr">Accroche</title>
                    </meta>
                    <params>
                        <param name="max" value="1"/>
                    </params>
                </property>
            </properties>
        </section>

        <section name="blocks">
            <meta>
                <title lang="en">Page</title>
                <title lang="fr">Page</title>
            </meta>

            <properties>
                <block name="blocks">
                    <types>
                        <xi:include href="../includes/blocks/rich-text.xml" />
                        <xi:include href="../includes/blocks/figure.xml" />
                        <xi:include href="../includes/blocks/quote.xml" />
                        <xi:include href="../includes/blocks/button.xml" />
                        <xi:include href="../includes/blocks/alert.xml" />
                        <xi:include href="../includes/blocks/pages-smart-content.xml" />
                        <xi:include href="../includes/blocks/publications-smart-content.xml" />
                        <xi:include href="../includes/blocks/definitions-smart-content.xml" />
                        <xi:include href="../includes/blocks/media-smart-content.xml" />
                        <xi:include href="../includes/blocks/form.xml" />
                    </types>
                </block>
            </properties>
        </section>
    </properties>
</template>
