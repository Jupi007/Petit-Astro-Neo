<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xi="http://www.w3.org/2001/XInclude" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">

  <key>publication_details</key>

  <properties>
    <property name="title" type="text_line" mandatory="true">
      <meta>
        <title>sulu_admin.title</title>
      </meta>

      <params>
        <param name="headline" value="true"/>
      </params>

      <tag name="sulu.rlp.part"/>
    </property>

    <property name="subtitle" type="text_line">
      <meta>
        <title>app.admin.subtitle</title>
      </meta>

      <tag name="sulu.rlp.part"/>
    </property>

    <property name="routePath" type="route" disabledCondition="title == null and subtitle == null" mandatory="true">
      <meta>
        <title>sulu_admin.url</title>
      </meta>

      <params>
        <param name="mode" value="leaf"/>
      </params>
    </property>

    <section name="blocks">
      <meta>
        <title>app.admin.publication</title>
      </meta>

      <properties>
        <block name="content">
          <types>
            <xi:include href="../templates/includes/blocks/rich-text.xml" />
          </types>
        </block>
      </properties>
    </section>
  </properties>
</form>
