<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">

  <key>definition_details</key>

  <properties>
    <property name="title" type="text_line" mandatory="true">
      <meta>
        <title>sulu_admin.title</title>
      </meta>

      <params>
        <param name="headline" value="true"/>
      </params>

      <tag name="sulu.rlp.part"/>
    </property>

    <property name="routePath" type="route" disabledCondition="title == null" mandatory="true">
      <meta>
        <title>sulu_admin.url</title>
      </meta>

      <params>
        <param name="mode" value="leaf"/>
      </params>
    </property>

    <property name="description" type="text_editor" mandatory="true">
      <meta>
        <title>app.admin.definition</title>
      </meta>

      <params>
        <param name="headline" value="true"/>
      </params>
    </property>
  </properties>
</form>
