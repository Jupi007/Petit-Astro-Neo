<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.1.xsd">
    <name>Le Petit Astro</name>
    <key>petit-astro</key>

    <localizations>
        <localization language="fr" default="true"/>
        <localization language="en"/>
    </localizations>

    <security>
        <system>Website</system>
    </security>

    <default-templates>
        <default-template type="page">default</default-template>
        <default-template type="home">homepage</default-template>
    </default-templates>

    <templates>
        <template type="search">search/search</template>
        <!-- See: http://docs.sulu.io/en/latest/cookbook/custom-error-page.html how to create a custom error page -->
        <template type="error">error/error</template>
    </templates>

    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="fr">Navigation principale</title>
                    <title lang="en">Main navigation</title>
                </meta>
            </context>
            <context key="footer">
                <meta>
                    <title lang="fr">Pied de page</title>
                    <title lang="en">Footer</title>
                </meta>
            </context>
        </contexts>
    </navigation>

    <portals>
        <portal>
            <name>Le Petit Astro</name>
            <key>petit-astro</key>

            <environments>
                <environment type="prod">
                    <urls>
                        <url>{host}/{language}</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url>{host}/{language}</url>
                    </urls>
                </environment>
                <environment type="test">
                    <urls>
                        <url>{host}/{language}</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url>{host}/{language}</url>
                    </urls>
                </environment>
            </environments>
        </portal>
    </portals>
</webspace>
