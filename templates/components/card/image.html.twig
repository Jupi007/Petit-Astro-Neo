{% set imgClass = 'aspect-video object-cover' %}

{% if image %}
  {{ get_image(image, {
    src: 'figure',
    srcset: 'figure@2x 2x',
    class: imgClass,
  }) }}
{% else %}
  <img
    src="{{ asset('build/website/images/NGC_7293.jpg') }}"
    alt=""
    class="{{ imgClass }}"
    loading="lazy"
  />
{% endif %}
