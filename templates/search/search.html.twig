{% extends "base.html.twig" %}

{% set contentTitle = 'Search' %}
{% set contentSubtitle = null %}

{% block content %}
  <form action="{{ path('sulu_search.website_search') }}" method="GET">
    <input name="q" type="text" placeholder="Search" value="{{ query }}"/>
    <input type="submit" value="Go"/>
  </form>
  {% if query != "" %}
    <h2>
      Showing
      {{ hits|length }}
      results for "{{ query }}"
    </h2>
    <ul>
      {% for i, hit in hits %}
        <li>
          <a href="{{ hit.document.url }}">{{- hit.document.title -}}</a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endblock %}
