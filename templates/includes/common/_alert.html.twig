{% set class = '' %}

{% if style == 'success' %}
  {% set class = 'bg-green-500/5 border-green-500/30 dark:border-green-400/20 text-green-900 dark:text-green-400' %}
{% elseif style == 'error' %}
  {% set class = 'border-red-100 dark:border-red-500/35 text-red-700 dark:text-red-500 bg-red-500/5 dark:bg-red-500/10' %}
{% endif %}

<p class="border p-2 text-center font-bold {{ class }}">
  {{ label }}
</p>
