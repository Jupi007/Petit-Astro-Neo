<figure>
	{% embed "includes/common/_figure_container.html.twig" with {
		content: content,
	} only %}
		{% block content %}
			<twig:page-container>
				<blockquote class="px-0 py-4 border-none">
					{{ content.quote }}
				</blockquote>
			</twig:page-container>
		{% endblock %}
	{% endembed %}

	{% if content.source or content.sourceLink %}
		<twig:page-container>
			<twig:block name="content">
				<figcaption>
					<cite>
						{% set source = content.source ?? content.sourceLink %}
						{% if content.sourceLink %}
							<a href="{{ content.sourceLink }}" {% if view.sourceLink.provider == 'external' %} target="_blank" {% endif %}>
								{{ source }}
							</a>
						{% else %}
							{{ source }}
						{% endif %}
					</cite>
				</figcaption>
			</twig:block>
		</twig:page-container>
	{% endif %}
</figure>
