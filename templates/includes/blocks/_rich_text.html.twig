{% if (previousBlockType == 'rich_text' or previousBlockType == 'button') and content.separator %}
  <hr>
{% endif %}

{% embed "includes/common/_page_container.html.twig" with {
  content: content,
} only %}
  {% block content %}
    {% if content.title %}
      <h2>{{ content.title }}</h2>
    {% endif %}
    
    <div class="text-justify">{{ content.text|raw }}</div>
  {% endblock %}
{% endembed %}


