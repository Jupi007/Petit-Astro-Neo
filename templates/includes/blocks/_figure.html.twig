<figure>
	{% embed "includes/common/_figure_container.html.twig" with {
		content: content,
		class: 'p-4 md:p-8',
	} only %}
		{% block content %}
			{{ get_image(content.image, {
				src: 'figure',
				srcset: 'figure@2x 2x',
				class: 'max-h-[80vh] w-auto mx-auto my-0'
			}) }}
		{% endblock %}
	{% endembed %}

	{% if content.caption %}
		<twig:page-container>
			<twig:block name="content">
				<figcaption class="text-center">
					{{ content.caption }}
				</figcaption>
			</twig:block>
		</twig:page-container>
	{% endif %}
</figure>
