<turbo-frame id="smart-publications-frame-{{ id }}" data-turbo-action="advance">
	<div class="{{ null != previousBlockType ? 'my-12' : 'mb-12' }}">
		{% set gridItems %}
			{% for publication in content.publications %}
				{% set media = sulu_resolve_media(publication.coverImage.id|default(publication.excerptImage), app.request.locale) %}
				{% include "includes/common/_card.html.twig" with {
					url: sulu_content_path(publication.url),
					image: media,
					title: publication.excerptTitle|default(publication.title),
					description: publication.excerptDescription,
					dataTurboFrame: '_top',
				} only %}
			{% endfor %}
		{% endset %}
	
		{% include "includes/common/_card_grid_container.html.twig" with {
			'content': gridItems,
			'id': 'smart-publications-' ~ id,
		} only %}
		
		{% include "includes/common/_smart_content_pagination.html.twig" with {
			'view': view.publications,
			'rootPath': sulu_content_path(parentContent.url),
			'id': 'smart-publications-' ~ id,
			'turboFrameId': 'smart-publications-frame-' ~ id,
		} only %}
	</div>	
</turbo-frame>
