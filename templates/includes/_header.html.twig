{% set headerHeight = '' %}

{% if content.coverSize|default('small') == 'small' %}
  {% set headerHeight = 'min-h-[22rem]' %}
{% elseif content.coverSize == 'medium' %}
  {% set headerHeight = 'min-h-[75vh]' %}
{% elseif content.coverSize == 'full' %}
  {% set headerHeight = 'min-h-[100vh]' %}
{% endif %}

<div class="relative overflow-hidden w-full dark:border-b border-outline-invert"
     x-data="{ scrollPosition: window.pageYOffset }"
     @scroll.window="scrollPosition = window.pageYOffset">
  <div class="relative w-full {{ headerHeight }} flex flex-col gap-12 py-10 px-8 items-center justify-center bg-gradient-to-b from-black/0 via-black/15 to-black/0 text-white text-center font-light font-colombia"
       x-bind:style="{ top: scrollPosition / 2 + 'px' }">
    {% include "includes/common/_logo.html.twig" only %}

    <h1 class="text-4xl drop-shadow-vertical">
      {{ headerTitle }}
      {% if headerSubtitle|default != null %}
        <br> <small class="italic text-3xl">{{ headerSubtitle }}</small>
      {% endif %}
    </h1>

    {% if headerLinkUrl|default and headerLinkLabel|default %}
      <a href="{{ headerLinkUrl }}"
         class="border border-white px-4 py-2 rounded-full drop-shadow-vertical text-xl bg-white/10 hover:bg-white/20 transition-colors">
        {{ headerLinkLabel }}
      </a>
    {% endif %}
  </div>

  {% set class = 'absolute z-[-1] h-full w-full object-cover bg-slate-600' %}

  {% if headerImage|default %}
    {{ get_image(headerImage, {
      src: 'figure',
      srcset: 'figure@2x 2x',
      class: class,
      'x-bind:style': "{ top: scrollPosition / 1.5 + 'px' }",
    }) }}
  {% else %}
    <img src="{{ asset('build/website/images/NGC_1952.jpg') }}"
         alt="NGC_1952"
         class="{{ class }}"
         x-bind:style="{ top: scrollPosition / 1.5 + 'px' }"
         loading="lazy"/>
  {% endif %}
</div>
