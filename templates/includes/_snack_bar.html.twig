<div class="flex flex-col gap-4 fixed right-0 bottom-0 z-30 max-w-lg w-full p-4">
  {% for type, messages in app.flashes %}
    {% for message in messages %}
      <twig:alert
        :variant="type"
        demissible
      >
        {{ message|trans }}
      </twig:Alert>
    {% endfor %}
  {% endfor %}
</div>
