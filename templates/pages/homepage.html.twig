{% extends "base.html.twig" %}

{% set coverTeaser = content.coverTeaser ? content.coverTeaser[0] : null %}

{% set headerImage = coverTeaser ? sulu_resolve_media(coverTeaser.mediaId, app.request.locale) : null %}
{% set headerTitle = coverTeaser ? 'app.last_publication'|trans : content.title %}
{% set headerSubtitle = coverTeaser ? coverTeaser.title : null %}
{% set headerLinkUrl = coverTeaser ? coverTeaser.url : null %}
{% set headerLinkLabel = coverTeaser and coverTeaser.moreText ? coverTeaser.moreText : 'app.read'|trans %}

{% set coverSize = 'medium' %}

{% block content %}
  {% include "includes/_blocks.html.twig" %}

  <sulu-reference type="list"/>
{% endblock %}
