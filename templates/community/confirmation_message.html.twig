{% extends 'base_fullart.html.twig' %}

{% set title = 'app.community.confirmation.title'|trans %}

{% block content %}
  {% if success %}
    {% include "includes/common/_alert.html.twig" with {
      'style': 'success',
      'label': 'app.community.confirmation.message'|trans
    } only %}
  {% else %}
    {% include "includes/common/_alert.html.twig" with {
      'style': 'error',
      'label': 'app.invalid_token_message'|trans
    } only %}
  {% endif %}
{% endblock %}
