{% extends 'base_fullart.html.twig' %}

{% set title = 'app.community.confirmation.title'|trans %}

{% block content %}
  {% if success %}
    <twig:Alert variant="success">
      {{ 'app.community.confirmation.message'|trans }}
    </twig:Alert>
  {% else %}
    <twig:Alert variant="error">
      {{ 'app.invalid_token_message'|trans }}
    </twig:Alert>
  {% endif %}
{% endblock %}
