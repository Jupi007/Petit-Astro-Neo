{% extends 'base_fullart.html.twig' %}

{% set title = 'app.login'|trans %}

{% block content %}
  <form action="{{ path('sulu_community.login') }}" method="post" class="flex flex-col gap-6">
    {% if error %}
      <twig:alert variant="error">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </twig:alert>
    {% endif %}

    <div class="flex flex-col gap-1">
      <label for="username">Username:</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" 
        class="block w-full p-2 outline-1 border border-outline dark:border-outline-invert focus:border-accent bg-black/2.5 dark:bg-white/2.5"
      />
    </div>

    <div class="flex flex-col gap-1">
      <label for="password">Password:</label>
      <input type="password" id="password" name="_password" 
        class="block w-full p-2 outline-1 border border-outline dark:border-outline-invert focus:border-accent bg-black/2.5 dark:bg-white/2.5"
      />
      <p class="text-end italic">
        <a href="{{ path('sulu_community.password_forget') }}" class="opacity-60 hover:opacity-75 transition-opacity">
          {{ 'app.community.login.password_forget'|trans }}
        </a>
      </p>
    </div>

    <div>
      <input type="checkbox" id="remember_me" name="_remember_me" checked />
      <label for="remember_me">
        {{ 'app.community.login.remember_me'|trans }}
      </label>
    </div>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <twig:button type="submit" class="mx-auto" small>
      {{ 'app.login'|trans }}
    </twig:button>
  </form>

  <p class="text-center mt-6">
    <a href="{{ path('sulu_community.registration') }}" class="opacity-60 hover:opacity-75 transition-opacity">
      {{ 'app.community.login.registration'|trans }}
    </a>
  </p>
{% endblock %}
