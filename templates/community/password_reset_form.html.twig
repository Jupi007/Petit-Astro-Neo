{% extends 'base_fullart.html.twig' %}

{% set title = 'app.community.password_reset.title'|trans %}

{% block content %}
  {% if app.request.get('send') == 'true' %}
    <twig:Alert
      :type="constant('App\\Components\\ComponentType::Success')"
      :label="'app.community.password_reset.success_message'|trans"
    />
  {% else %}
    {% if form %}
      {{ form(form) }}
    {% else %}
      <twig:Alert
        :type="constant('App\\Components\\ComponentType::Error')"
        :label="'app.invalid_token_message'|trans"
      />
    {% endif %}
  {% endif %}
{% endblock %}
