{% extends 'base_fullart.html.twig' %}

{% set title = 'Password reset' %}

{% block content %}
  {% if app.request.get('send') == 'true' %}
    {% include "includes/common/_alert.html.twig" with {
      'style': 'success',
      'label': 'Password successfully changed.'
    } only %}
  {% else %}
    {% if form %}
      {{ form_start(form) }}
        {{ form_widget(form) }}

        {% include "includes/common/_button.html.twig" with {
          'type': 'submit',
          'label': 'Submit',
          'small': true,
          'class': 'mx-auto',
        } only %}
      {{ form_end(form) }}
    {% else %}
      {% include "includes/common/_alert.html.twig" with {
        'style': 'error',
        'label': 'Invalid token.'
      } only %}
    {% endif %}
  {% endif %}
{% endblock %}
