{% extends 'base_fullart.html.twig' %}

{% set title = 'app.community.password_reset.title'|trans %}

{% block content %}
  {% if app.request.get('send') == 'true' %}
    <twig:Alert variant="success">
      {{ 'app.community.password_reset.success_message'|trans }}
    </twig:Alert>
  {% else %}
    {% if form %}
      {{ form(form) }}
    {% else %}
      <twig:Alert variant="error">
        {{ 'app.invalid_token_message'|trans }}
      </twig:Alert>
    {% endif %}
  {% endif %}
{% endblock %}
