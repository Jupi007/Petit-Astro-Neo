{% extends 'base_fullart.html.twig' %}

{% set title = 'app.community.profile.title'|trans %}

{% block content %}
  {% if success %}
    <twig:Alert :variant="constant('App\\Components\\ComponentVariant::Success')">
      {{ 'community.email_confirmation.message'|trans }}
    </twig:Alert>
  {% else %}
    <twig:Alert :variant="constant('App\\Components\\ComponentVariant::Error')">
      {{ 'app.invalid_token_message'|trans }}
    </twig:Alert>
  {% endif %}
{% endblock %}
