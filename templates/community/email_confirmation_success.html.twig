{% extends 'base_fullart.html.twig' %}

{% set title = 'app.community.profile.title'|trans %}

{% block content %}
  {% if success %}
    <twig:Alert
      :type="constant('App\\Components\\ComponentVariant::Success')"
      :label="'community.email_confirmation.message'|trans"
    />
  {% else %}
    <twig:Alert
      :type="constant('App\\Components\\ComponentVariant::Error')"
      :label="'app.invalid_token_message'|trans"
    />
  {% endif %}
{% endblock %}
